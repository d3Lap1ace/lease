<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.lease.web.admin.mapper.AttrKeyMapper">
    <resultMap id="attrKeyVoMap" type="com.spring.lease.web.admin.vo.attr.AttrKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="key_name"/>
        <collection property="attrValueList" ofType="com.spring.lease.model.entity.AttrValue" autoMapping="true">
            <id column="value_id" property="id"/>
            <result column="value_name" property="name"/>
        </collection>
    </resultMap>
    <select id="getAttrKeyVoList" resultMap="attrKeyVoMap">
        select ak.id,ak.name,av.id av_id,av.name av_name,av.attr_key_id
        from attr_key ak left join attr_value av
                           on ak.id = av.attr_key_id and av.is_deleted = 0
        where ak.is_deleted = 0
    </select>

</mapper>
